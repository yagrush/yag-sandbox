{
  "saveAndRun": {
    "commands": [
      {
        "match": "\\.php$",
        "cmd": "${workspaceRoot}/vendor/bin/php-cs-fixer fix --config=${workspaceRoot}/application/.php-cs-fixer.php ${file}",
        "useShortcut": false,
        "silent": false
      }
    ]
  },
  "editor.rulers": [120],
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[javascript][javascriptreact][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
  //   "prettier.configPath": ".vscode/.prettierrc.json"
}
