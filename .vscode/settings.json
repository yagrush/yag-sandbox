{
  "saveAndRun": {
    "commands": [
      {
        "match": "\\.php$",
        "cmd": "${workspaceRoot}/vendor/bin/php-cs-fixer fix --config=${workspaceRoot}/.php-cs-fixer.php ${file}",
        "useShortcut": false,
        "silent": false
      }
    ]
  },
  "editor.rulers": [120],
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  //   "[javascript][javascriptreact][jsonc]": {
  "[javascript][javascriptreact][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
//   "php-cs-fixer.toolPath": "${work${workspaceRoot}/vendor/bin/php-cs-fixer",
//   "php-cs-fixer.config": "${workspaceRoot}/.php-cs-fixer.php",
  "prettier.configPath": "application/.prettierrc.json",
}
